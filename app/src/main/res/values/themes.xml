<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal de la app -->
    <style name="Theme.TimeMate" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimary">@color/timemate_primary</item>
        <item name="colorSecondary">@color/timemate_secondary</item>

        <!-- Ocultar barra de estado (mejor para capturas y evitar notificaciones) -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <!-- Tema de la pantalla Splash -->
    <style name="Theme.TimeMate.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/timemate_primary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
